<div class="navbar-lewagon">
  <%= image_tag "Cocktail-1988-movie-logo.png",
                 alt: "1988 movie Cocktail logo",
                 width: 96 %>
  <div>
    <%= link_to "Add new cocktail",
                new_cocktail_path,
                class: "mr-4 btn btn-main"%>
    <%= link_to "Home",
                root_path,
                class: "btn btn-main"%>
  </div>
</div>

<div class="container">
  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.description} #{dose.ingredient.name.downcase}"%>
      <%= link_to "Delete", 
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
  <hr>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>
  <%= link_to "View all cocktails", cocktails_path %>
</div>