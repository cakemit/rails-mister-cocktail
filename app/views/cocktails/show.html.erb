<div class="navbar-lewagon">
  <%= image_tag "Cocktail-1988-movie-logo.png",
                 alt: "1988 movie Cocktail logo",
                 width: 96 %>
  <div>
    <%= link_to "Add ingredient",
                new_cocktail_dose_path(@cocktail),
                class: "mr-4 btn btn-main"%>
    <%= link_to "Browse cocktails",
                cocktails_path,
                class: "btn btn-main"%>
  </div>
</div>

<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.description} #{dose.ingredient.name.downcase}"%>
      <%= link_to "Delete", 
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>
</div>